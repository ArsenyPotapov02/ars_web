{% extends "__content.twig" %}

{% block content %}
{# {{tables[table_type]}} #}
    <h1>Table </h1> 
    <hr>
    <h3>На этой странице содержится информация из таблицы </h3>
    <div class="container">
        <table class="table table-striped table-hover">
            <thead>
              <tr>
                {% for col in column_name %}
                    <th scope="col">{{col.0}}</th>
                {% endfor %}
                <th scope="col">Editing</th>
              </tr>
            </thead>
            <tbody> 
                {% for object in horse_menu %}
                    <tr>
                        {% for i in 0..count.0 %}
                            <th>{{object[i]}}</th>
                        {% endfor %}
                            <td>
                                <div class="row">
                                    <div class="col-2">
                                        <form action="/table/{{object.0}}/delete" method="POST">
                                            <input type="hidden" name="id" value="{{object.id}}">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </form>
                                    </div>
                                    <div class="col-2">
                                        <form action="/horse-object/{{object.id}}/edit" method="GET">
                                            <input type="hidden" name="id" value="{{object.id}}">
                                            <button type="submit" class="btn btn">
                                                <i class="fa-solid fa-pen"></i>
                                            </button>
                                        </form>
                                    </div>                                    
                                </div>                                 
                            </td>
                    </tr>
                {% endfor %}
            </tbody>
          </table>
    </div>    
{% endblock %}